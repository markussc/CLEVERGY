{% extends 'base.html.twig' %}
   
{% block body %}
    {% include 'default/content.html.twig' %}
{% endblock %}

{% block javascripts %}
    <script>
        $(function() {
            $('.select2').select2();
        });

        (function worker() {
            $.ajax({
              url: '{{ path('refresh') }}', 
              success: function(data) {
                $(data).find('.columns').each(function(){
                    var divId = $(this).attr('id');
                    $("#" + divId).replaceWith($(this));
                    $(this).find('.chart').each(function() {
                        updateChartCallback($(this).find('.chartId').html(), $(this).find('.chartData').html(), $(this).find('.chartColor').html());  
                    });
                });
              },
              complete: function() {
               // Schedule the next request when the current one's complete
               setTimeout(worker, 1000);
              }
            });
        })();

        {% if is_granted('ROLE_OWNER') %}
        function sendCommand(command)
        {
            showSpinner();

            // send command
            var url = "{{ path('command_exec', {'command': 'command_val'}) }}";
            url = url.replace('command_val', JSON.stringify(command));
            window.location = url;
        }
        {% endif %}
    </script>
{% endblock %}
